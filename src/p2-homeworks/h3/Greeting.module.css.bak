





.items input {
	border: none;
  padding: 4px 5px;
  margin: 10px 0 10px 10px;
  border-radius: 8px 4px 4px 8px;
  background-image: linear-gradient(to right, #afe8df 0%, #8498db 51%, #9EEFE1 100%);
  background-size: 200% auto;
   color: rgb(77, 0, 0);
  box-shadow: 0 16px 32px 2px rgba(0, 40, 120, .35);
  transition: .5s;
}

.items button {
	border: none;
	 padding: 3.5px 5px;
  border-radius: 15px 55px 55px 15px;
  background-image: linear-gradient(45deg, rgb(77, 195, 195) 20%, #cc7ece 40%, #299cb0 70%);
  background-position: 100% 1;
  background-size: 200% 200%;
  /* font-size: 14px; */
  color: rgb(42, 0, 0);
  box-shadow: 0 16px 32px 0 rgba(0, 40, 120, .35);
  transition: .5s;
}

.items input:hover {
transform: scale(1.01);


}

.items button:hover {
transform: scale(1.02);
}